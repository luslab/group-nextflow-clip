/*
 * -------------------------------------------------
 *  luslab/group-nextflow-clip Nextflow config file
 * -------------------------------------------------
 * Config options for running the whole pipeline tests
 */

process.container = 'luslab/nextflow-clip:dev'
docker.enabled = true

// Set test data paths
params {
  reads = "test/data/reads/*.fq.gz"
  bowtie_index = "test/data/small_rna_bowtie"
  star_index = "test/data/reduced_star_index"
  genome_fai = "test/data/GRCh38.primary_assembly.genome_chr6_34000000_35000000.fa.fai"
}