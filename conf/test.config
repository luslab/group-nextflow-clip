/*
 * -------------------------------------------------
 *  luslab/group-nextflow-clip Nextflow config file
 * -------------------------------------------------
 * Config options for running the integration tests
 */

// Test parameters
params {
  classpath = "$baseDir/groovy/NfUtils.groovy"
  umidedup = true
  input = "$baseDir/test/data/chr20/metadata.csv"
  bowtie_index = "$baseDir/test/data/small_rna_bowtie"
  star_index = "$baseDir/test/data/reduced_star_index"
  genome = "$baseDir/test/data/chr20/chr20.fa"
  genome_fai = "$baseDir/test/data/chr20/chr20.fa.fai"
  segmentation = "$baseDir/test/data/segmentation.gtf.gz"
  peka_regions = "$baseDir/test/data/regions_GENCODE_v30.gtf.gz"
}
